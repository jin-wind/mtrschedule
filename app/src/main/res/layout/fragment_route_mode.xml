<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- 左侧路线选择区域 - 占屏幕1/5宽度 -->
    <LinearLayout
        android:id="@+id/left_column"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background_alt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.2">

        <RadioGroup
            android:id="@+id/mode_toggle_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="4dp">
            <RadioButton
                android:id="@+id/btn_lrt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LRT"
                android:checked="true"/>
            <RadioButton
                android:id="@+id/btn_bus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bus"/>
        </RadioGroup>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/route_list_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layoutAnimation="@anim/layout_fade_slide_up"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />
    </LinearLayout>

    <!-- 右侧路线详情区域 - 占屏幕4/5宽度 -->
    <FrameLayout
        android:id="@+id/route_detail_container"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:background="@color/background"
        app:layout_constraintStart_toEndOf="@id/route_list_recycler_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- 路线站台列表 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/route_stations_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:layoutAnimation="@anim/layout_fade_slide_up"
            android:padding="12dp"
            android:visibility="visible" />

        <!-- 初始提示文本 -->
        <TextView
            android:id="@+id/route_detail_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_route_hint"
            android:textColor="@color/text_secondary"
            android:textSize="18sp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/route_direction_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:text="屯門碼頭 → 元朗" />

        <!-- 加载指示器 -->
        <ProgressBar
            android:id="@+id/route_loading_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateTint="@color/primary"
            android:visibility="gone"/>

        <!-- 错误提示 -->
        <TextView
            android:id="@+id/route_error_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bg_error_banner"
            android:textColor="@color/on_primary"
            android:padding="16dp"
            android:visibility="gone"/>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
