<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 左侧路线选择区域 - 占屏幕1/5宽度 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/route_list_recycler_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="#494949"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.2" />

    <!-- 右侧路线详情区域 - 占屏幕4/5宽度 -->
    <FrameLayout
        android:id="@+id/route_detail_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toEndOf="@id/route_list_recycler_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- 路线站台列表 -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/route_stations_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:clipToPadding="false"
            android:visibility="gone"/>

        <!-- 初始提示文本 -->
        <TextView
            android:id="@+id/route_detail_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_route_hint"
            android:textSize="18sp"
            android:layout_gravity="center"/>

        <!-- 加载指示器 -->
        <ProgressBar
            android:id="@+id/route_loading_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <!-- 错误提示 -->
        <TextView
            android:id="@+id/route_error_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#FF0000"
            android:padding="16dp"
            android:visibility="gone"/>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
